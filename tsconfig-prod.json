{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "build",
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "removeComments": true,
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules/",
    "src/**/*.spec.ts"
  ]
}